# Activer le moteur de réécriture d'URL
RewriteEngine On

# Définir la racine du projet
RewriteBase /

# Si le fichier ou le dossier demandé existe, on y accède directement
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d

# Sinon, on redirige toutes les requêtes vers index.php
RewriteRule ^(.*)$ index.php?url=$1 [QSA,L]

# Sécurité basique : interdire l’accès direct à certains fichiers sensibles
<FilesMatch "\.(env|json|lock|git|ini|log)$">
    Require all denied
</FilesMatch>

# Gérer le charset par défaut
AddDefaultCharset UTF-8
